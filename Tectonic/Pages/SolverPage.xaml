<Page x:Class="Tectonic.SolverPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tectonic"
      xmlns:viewModels="clr-namespace:Tectonic.ViewModels"
      xmlns:conv="clr-namespace:Tectonic.Converters"
      xmlns:helpers="clr-namespace:Tectonic.Helpers"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="SolverPage">
    <Page.Resources>
        <conv:BorderThicknessConverter x:Key="BorderThicknessConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:InverseBoolToVisibilityConverter x:Key="InverseBoolToVisibilityConverter"/>
    </Page.Resources>

    <Page.DataContext>
        <viewModels:MainViewModel/>
    </Page.DataContext>

    <DockPanel LastChildFill="True">
        <TextBlock Text="{Binding Board.Title}" DockPanel.Dock="Top" HorizontalAlignment="Center"/>

        <!-- Bottom Button -->
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center">
            <Button Content="Next Step" Height="40" Margin="5" Padding="10,0"
                Command="{Binding CheckNextCommand}" />
            <Button Content="Until complete" Height="40" Margin="5" Padding="10,0"
                Command="{Binding CheckAllCommand}" />
        </StackPanel>

        <!-- Grid with cells -->
        <Viewbox Stretch="Uniform" StretchDirection="Both">
            <ItemsControl ItemsSource="{Binding Board.Cells}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid helpers:UniformGridHelper.BoundColumns="{Binding DataContext.Board.X, RelativeSource={RelativeSource AncestorType=ItemsControl}}" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" Background="Transparent" Margin="0" Width="55" Height="45">
                            <Border.BorderThickness>
                                <MultiBinding Converter="{StaticResource BorderThicknessConverter}">
                                    <Binding />
                                    <Binding Path="DataContext.Board" RelativeSource="{RelativeSource AncestorType=Page}"/>
                                    <Binding Path="GroupChanged"/>
                                </MultiBinding>
                            </Border.BorderThickness>
                            <Grid Width="Auto" Height="Auto" Margin="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <!-- Small Numbers -->
                                <ItemsControl ItemsSource="{Binding SmallNumbers}" 
                                              Visibility="{Binding HasSmallNumbers, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel HorizontalAlignment="Center"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" FontSize="10" Margin="2"/>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>

                                <!-- Big Number -->
                                <TextBlock Grid.Row="1" Text="{Binding BigNumber}" FontSize="28" FontWeight="Bold" 
                                           HorizontalAlignment="Center" VerticalAlignment="Center"
                                           Visibility="{Binding HasSmallNumbers, Converter={StaticResource InverseBoolToVisibilityConverter}}"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Viewbox>
    </DockPanel>
</Page>